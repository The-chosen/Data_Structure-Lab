<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#eee">

    <TextView
        android:id="@+id/activity_add_site_head_title_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="20dp"
        android:text="景点初始化"
        android:textColor="#000"
        android:textSize="23sp"
        android:typeface="monospace"/>

    <TextView
        android:id="@+id/warning_a_i"
        android:visibility="invisible"
        android:layout_below="@+id/activity_add_site_head_title_i"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请将信息填写完整！"
        android:textColor="#f90000"/>


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/site_name_i"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/warning_a_i"
        android:background="#fff">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/name_icon"/>
        <EditText
            android:id="@+id/name_content_i"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="9"
            android:hint="景点名字"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/site_hasbreak_i"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/site_name_i"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/up1_i"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:src="@drawable/rest_house_icon"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="9"
                android:textSize="20sp"
                android:text="有无休息室"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/up1_i"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <RadioGroup
                android:id="@+id/rest_radiogroup_i"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rest_y_i"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有"/>
                <RadioButton
                    android:id="@+id/rest_n_i"
                    android:layout_marginLeft="100dp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"/>
            </RadioGroup>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/site_hasWC_i"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/site_hasbreak_i"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/up2_i"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:src="@drawable/rest_house_icon"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="9"
                android:textSize="20sp"
                android:text="有无洗手间"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/up2_i"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <RadioGroup
                android:id="@+id/wc_radiogroup_i"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/wc_y_i"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有"/>
                <RadioButton
                    android:id="@+id/wc_n_i"
                    android:layout_marginLeft="100dp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"/>
            </RadioGroup>

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/site_intro_i"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/site_hasWC_i"
        android:background="#fff">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/intro_icon"/>
        <EditText
            android:id="@+id/intro_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:paddingTop="7dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_weight="9"
            android:hint="景点介绍"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/site_intro_i"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5">
            <Button
                android:id="@+id/add_site_btn_i"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="继续增添"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5">
            <Button
                android:id="@+id/finish_site_btn_i"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="增添完成"
                />


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>