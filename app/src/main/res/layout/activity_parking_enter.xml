<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#eee"
    >

    <TextView
        android:id="@+id/activity_enter_head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="20dp"
        android:text="停车"
        android:textColor="#000"
        android:textSize="23sp"
        android:typeface="monospace"/>

    <LinearLayout
        android:id="@+id/showRest"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@id/activity_enter_head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="前方还有"/>

        <TextView
            android:textSize="18dp"
            android:id="@+id/number_of_waitingCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n"/>

        <TextView
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="辆车，请等候......"/>

    </LinearLayout>

    <TextView
        android:id="@+id/congratulation"
        android:text="欢迎停车！"
        android:layout_below="@id/showRest"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>