<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#eee"
    >

    <ImageView
        android:id="@+id/bing_pic_img"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/activity_enter_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="20dp"
            android:text="停车"
            android:textColor="#fff"
            android:textSize="23sp"
            android:typeface="monospace"/>

        <LinearLayout
            android:id="@+id/showRest"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_below="@id/activity_enter_head_title"
            android:layout_width="match_parent"
            android:background="#8000"
            android:layout_height="wrap_content">

            <TextView
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:textSize="26dp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前方还有"/>

            <TextView
                android:textSize="26dp"
                android:textColor="#fff"
                android:id="@+id/number_of_waitingCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>

            <TextView
                android:textSize="26dp"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:text="个空位"/>

        </LinearLayout>

        <TextView
            android:id="@+id/congratulation"
            android:text="欢迎停车！"
            android:layout_below="@id/showRest"
            android:layout_marginTop="50dp"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:textSize="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/need_waiting"
            android:text="请稍等片刻！"
            android:visibility="invisible"
            android:layout_below="@id/showRest"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/finish_enter_btn"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="完成"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/congratulation"
            android:layout_marginTop="280dp"
            android:background="#7b50504c"
            android:textColor="#fff"
            />

    </RelativeLayout>


</FrameLayout>