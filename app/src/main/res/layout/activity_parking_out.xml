<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#eee"
    >
    <ImageView
        android:id="@+id/bing_pic_img"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/activity_out_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="20dp"
            android:text="停车"
            android:textColor="#fff"
            android:textSize="23sp"
            android:typeface="monospace"/>


        <RelativeLayout
            android:id="@+id/cost_car"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:layout_below="@+id/activity_out_head_title"
            android:background="#8000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<RelativeLayout
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tt1"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="停车费:"
        />

    <TextView
        android:id="@+id/cost"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:textColor="#fff"
        android:layout_toRightOf="@id/tt1"
        android:layout_height="wrap_content"
        android:text=""
        />

    <TextView
        android:textSize="40dp"
        android:layout_toRightOf="@id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="元"
        />
</RelativeLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/out_finish_btn"
            android:background="#7b50504c"
            android:textColor="#fff"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="完成"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/cost_car"
            android:layout_marginTop="255dp"
            />

    </RelativeLayout>

</FrameLayout>