<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <TextView
        android:id="@+id/activity_shortest_road_outcome_head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="30dp"
        android:text="最短路径指导"
        android:textColor="#000"
        android:textSize="23sp"
        android:typeface="monospace"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="最短距离:"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:layout_below="@id/activity_shortest_road_outcome_head_title"/>

    <TextView
        android:id="@+id/shortest_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:text=""/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="最短路径:"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/shortest_weight"/>


    <TextView
        android:id="@+id/shortest_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:text=""/>

</RelativeLayout>