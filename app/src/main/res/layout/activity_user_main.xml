<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <ImageView
        android:id="@+id/bing_pic_img"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/activity_user_main_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="100dp"
            android:text="景区欢迎您！"
            android:textColor="#fff"
            android:textSize="23sp"
            android:typeface="monospace"/>


        <Button
            android:id="@+id/activity_user_main_siteDistr_btn"
            android:layout_marginTop="90dp"
            android:layout_width="340dp"

            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:background="#7b50504c"
            android:textColor="#fff"
            android:layout_below="@id/activity_user_main_head_title"
            android:text="景区景点分布图"/>

        <Button
            android:id="@+id/activity_user_main_siteSearch_btn"
            android:layout_marginTop="10dp"
            android:layout_width="340dp"

            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_user_main_siteDistr_btn"
            android:background="#7b50504c"
            android:textColor="#fff"
            android:text="景点查找及热度排序"/>

        <Button
            android:id="@+id/activity_user_main_guidline_btn"
            android:layout_marginTop="10dp"
            android:layout_width="340dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_user_main_siteSearch_btn"
            android:background="#7b50504c"
            android:textColor="#fff"
            android:text="导游路线图"/>


        <Button
            android:id="@+id/activity_user_main_shortestRoad_btn"
            android:layout_marginTop="10dp"
            android:layout_width="340dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_user_main_guidline_btn"
            android:background="#7b50504c"
            android:textColor="#fff"
            android:text="最短路径指导"/>


        <Button
            android:id="@+id/activity_user_main_parking_btn"
            android:layout_marginTop="10dp"
            android:layout_width="340dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_user_main_shortestRoad_btn"
            android:background="#7b50504c"
            android:textColor="#fff"
            android:text="停车"/>

        <Button
            android:id="@+id/activity_user_main_publishing_btn"
            android:layout_marginTop="10dp"
            android:layout_width="340dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_user_main_parking_btn"
            android:background="#7b50504c"
            android:textColor="#fff"
            android:text="查看管理员通知通告"/>


    </RelativeLayout>

</FrameLayout>