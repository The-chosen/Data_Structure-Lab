<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <ImageView
        android:id="@+id/bing_pic_img"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/activity_shortest_road_outcome_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="30dp"
            android:text="最短路径指导"
            android:textColor="#fff"
            android:textSize="23sp"
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="最短距离:"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:layout_below="@id/activity_shortest_road_outcome_head_title"/>

        <TextView
            android:id="@+id/shortest_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:textSize="30dp"
            android:layout_marginTop="5dp"
            android:background="#8000"
            android:textColor="#fff"
            android:text=""/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最短路径:"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:layout_below="@id/shortest_weight"/>


        <TextView
            android:id="@+id/shortest_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_below="@id/text2"
            android:layout_marginTop="5dp"
            android:background="#8000"
            android:textColor="#fff"
            android:text=""/>

        <Button
            android:id="@+id/shortest_finish_btn"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="完成"
            android:layout_below="@id/shortest_line"
            android:layout_marginTop="210dp"
            android:background="#7b50504c"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

</FrameLayout>